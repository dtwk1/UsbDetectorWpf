<Window x:Class="UsbDetectorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsbDetectorWpf"
        xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
     
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:Converter x:Key="Converter"></local:Converter>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel></local:MainViewModel>
    </Window.DataContext>

    <e:Interaction.Behaviors>
        <local:DeviceChangeBehavior  Command="{Binding Command}"></local:DeviceChangeBehavior>
    </e:Interaction.Behaviors>

</Window>
